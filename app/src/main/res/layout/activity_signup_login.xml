<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.SignupLoginActivity"
    android:id="@+id/relative_layout_gradient"
    android:padding="16dp"
    android:background="@drawable/gradient_list">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@+id/layout_greeting"
        android:layout_marginBottom="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/layout_greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_writer_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="find spots\nto hang out"
            android:fontFamily="@font/concert_font"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="32sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:fontFamily="@font/nunito_font"
            android:text="We will help you to find cool places to hang out with your friends!"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="Login"
                android:textAllCaps="false"
                android:fontFamily="@font/nunito_font"
                android:textColor="@color/white"
                android:textStyle="normal"
                app:cornerRadius="14dp" />

            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:textAllCaps="false"
                android:fontFamily="@font/nunito_font"
                android:text="Sign Up"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textStyle="normal" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>