<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".auth.forget_password.ForgotPasswordActivity">


    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        android:src="@drawable/ic_back"
        app:tint="@color/title_text_color" />

    <com_pizly.java_pizly.pizly.animation.TypeTextWriterTextView
        android:id="@+id/text_view_title_forgotPpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_layout_fields"
        android:layout_below="@+id/image_view_back"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/concert_font"
        android:gravity="center"
        android:text="Forget Password"
        android:textColor="@color/title_text_color"
        android:textSize="24sp" />


    <LinearLayout
        android:id="@+id/linear_layout_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/nunito_font"
            android:text="Enter your email below, to provide the possibility to send you the link of repairing password" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:theme="@style/NormalTextInputLayoutStyle"
            android:layout_marginTop="20dp"
            app:boxCornerRadiusBottomEnd="14dp"
            app:boxCornerRadiusBottomStart="14dp"
            app:boxCornerRadiusTopEnd="14dp"
            app:boxCornerRadiusTopStart="14dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_font"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/title_text_color" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/title_text_color"
        android:textColor="@color/background_nav_color"
        android:text="Done"
        android:layout_below="@+id/linear_layout_fields"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_font"
        app:cornerRadius="14dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:textStyle="normal"/>

</RelativeLayout>